<% title "Completed Tasks" %>
<%= link_to "All Subjects", subjects_path %> | 
<%= link_to "All Sections", sections_path %><br>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Completed?</th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
    <tr>
        <td><%= link_to section.title, section_path(section) %></td>
        <td><%= section.complete %></td>
      <% end %>
    </tr>
  </tbody>
</table>