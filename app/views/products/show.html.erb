<h1><%= @product.name %></h1>

<p>
  <em>Price: </em>
  <%= number_to_currency(@product.price) %>
</p>

<em>In Categories:</em>
<ul>
  <%= @product.categories.map(&:name).join(', ') %>
</ul>

<p>
  <%= link_to "Edit", edit_product_path(@product) %> | 
  <%= link_to "Back to list", products_path %>
</p>