<h1>Products</h1>
<p><%= link_to "Add product", new_product_path %></p>

<div align="center">
  <%= will_paginate %>
</div>

<div id="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= link_to product.name, product_path(product) %></h2>
      <div class="details">
        <%= number_to_currency(product.price) %>
      </div>
    </div>
  <% end %>
</div>

<div align="center">
  <%= will_paginate %>
</div>
